<Window x:Class="HisseAnalizUygulamasi.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Geçmiş Kayıtlar" Height="700" Width="1100"
        Background="{DynamicResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <TextBlock Grid.Row="0"
                   Text="📈 Geçmiş Kayıtlar" 
                   FontSize="26" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"
                   Foreground="{DynamicResource TextPrimaryBrush}"/>

        <!-- Sembol Seçimi -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Sembol Seç:" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>

                <ComboBox x:Name="cmbSymbols"
                          Grid.Column="1"
                          FontSize="14"
                          Padding="5"
                          SelectionChanged="CmbSymbols_SelectionChanged"/>

                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal"
                            Margin="10,0,0,0">
                    <Button x:Name="BtnRefresh"
                            Content="🔄 Yenile"
                            Click="BtnRefresh_Click"
                            Background="{DynamicResource PrimaryBrush}"
                            Foreground="White"
                            Padding="10,5"
                            Margin="0,0,5,0"
                            Cursor="Hand"/>

                    <Button x:Name="BtnDeleteSymbol"
                            Content="🗑️ Sembol Sil"
                            Click="BtnDeleteSymbol_Click"
                            Background="#F44336"
                            Foreground="White"
                            Padding="10,5"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Kayıtlar Tablosu -->
        <Border Grid.Row="2"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="5"
                Padding="15"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Trend Bilgisi -->
                <Border Grid.Row="0"
                        x:Name="TrendPanel"
                        Background="#E3F2FD"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,0,0,10"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock x:Name="txtTrend"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>

                        <TextBlock x:Name="txtRecordCount"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"
                                   Foreground="Gray"/>
                    </StackPanel>
                </Border>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          x:Name="HistoryDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="All"
                          AlternatingRowBackground="#F5F5F5"
                          MouseDoubleClick="HistoryDataGrid_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tarih" Binding="{Binding TarihStr}" Width="140"/>
                        <DataGridTextColumn Header="Şirket" Binding="{Binding SirketAdi}" Width="*"/>
                        <DataGridTextColumn Header="Adil Değer" Binding="{Binding AdilDegerStr}" Width="100"/>
                        <DataGridTextColumn Header="Güncel Fiyat" Binding="{Binding GuncelFiyatStr}" Width="100"/>
                        <DataGridTextColumn Header="İskonto" Binding="{Binding IskontoStr}" Width="80"/>
                        <DataGridTextColumn Header="Top. Kaynaklar" Binding="{Binding ToplamKaynaklarStr}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Alt Butonlar -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button x:Name="BtnClearAll"
                    Content="🗑️ TÜM GEÇMİŞİ SİL"
                    Click="BtnClearAll_Click"
                    Background="#F44336"
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    Cursor="Hand"/>

            <Button x:Name="BtnClose"
                    Content="KAPAT"
                    Click="BtnClose_Click"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="15,8"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>